<%= form_for comment, :html => { :id => "new_comment_#{restaurant.id}", :class => 'form_restaurant_comment'}, remote: true do |f| %>
    <%= f.hidden_field :restaurant_id, value: restaurant.id %>
    <div class="row">
      <div class="col-md-12">
        <div class="hidden alert alert-danger"></div>
        <div class="hidden alert alert-success"></div>
        <div class="form-group">
          <%= f.label :author %>
          <%= f.text_field :author, class: 'form-control' %>
          <span class="help-block"></span>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :message %>
          <%= f.text_area :message, class: 'form-control' %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.button class: 'btn btn-primary btn-xs' do %>
          <i class="glyphicon glyphicon-comment"></i> comment
          <% end %>
        </div>
      </div>
    </div>
<% end %>
