<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag restaurant.logo.url(:thumb) %>
        <div class="caption">
          <h3 class="text-center"><%= restaurant.name %></h3>
          <p>
            <strong>Specialty:</strong> <%= restaurant.specialty %>
            <address>
              <strong>Address:</strong> <%= restaurant.address %>, <%= restaurant.neighborhood %>,
              <%= restaurant.city %>-<%= restaurant.state %>
            </address>
          </p>
          <p>
            <%= link_to restaurant, class: 'btn btn-default btn-xs' do %>
              <i class="glyphicon glyphicon-comment"></i> comment
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>