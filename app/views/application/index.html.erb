<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag restaurant.logo.url(:thumb) %>
        <div class="caption">
          <h3 class="text-center"><%= restaurant.name %></h3>
          <p>
            <strong>Specialty:</strong> <%= restaurant.specialty %>
            <address>
              <strong>Address:</strong> <%= restaurant.address %>, <%= restaurant.neighborhood %>,
              <%= restaurant.city %>-<%= restaurant.state %>
            </address>
          </p>
          <%= render 'comments/index', restaurant: restaurant %>
          <%= render 'comments/form', comment: @comment, restaurant: restaurant %>
        </div>
      </div>
    </div>
  <% end %>
</div>